<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_backgroud"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="30dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shiraz_university"
        android:paddingBottom="0dp"
        android:layout_marginTop="-50dp"
        android:layout_alignParentTop="true"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        app:cardBackgroundColor="@color/colorSecondaryDark"
        app:cardCornerRadius="35dp"
        app:cardElevation="15dp">

        <EditText
            android:text="1003"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:hint="شناسه کاربری"
            android:paddingHorizontal="15dp"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryTextDarker"
            android:textSize="20dp"


            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorSecondaryDark"
        app:cardCornerRadius="35dp"
        app:cardElevation="15dp">

        <EditText
            android:text="123"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:hint="رمز عبور"
            android:paddingHorizontal="15dp"
            android:padding="15dp"
            android:textColor="@color/colorPrimaryText"
            android:textColorHint="@color/colorPrimaryTextDarker"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:gravity="right" />
    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/card2"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedbutton"
        android:elevation="10dp"
        android:text="ورود"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp"
        android:id="@+id/loginbt"
        android:onClick="login"
        android:windowSoftInputMode="adjustResize"
        />

</LinearLayout>